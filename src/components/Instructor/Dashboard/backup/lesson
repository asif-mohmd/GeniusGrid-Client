import { useState } from "react";
import AddContent from "./AddContent";

const AddLessons = () => {
  const [lessons, setLessons] = useState([
    {
      id: 1,
      contents: [{ videoTitle: "", videoURL: "" }]
    }
  ]);

  const handleContentSubmit = (lessonId) => {
    // Add logic to handle content submission if needed
  };

  const handleContentChange = (lessonId, contentIndex, updatedContent) => {
    setLessons((prevLessons) => {
      const updatedLessons = prevLessons.map((lesson) => {
        if (lesson.id === lessonId) {
          const updatedContents = [...lesson.contents];
          updatedContents[contentIndex] = updatedContent;
          return { ...lesson, contents: updatedContents };
        }
        return lesson;
      });
      return updatedLessons;
    });
  };

  const addNewContent = (lessonId) => {
    setLessons((prevLessons) => {
      const updatedLessons = prevLessons.map((lesson) => {
        if (lesson.id === lessonId) {
          return { ...lesson, contents: [...lesson.contents, { videoTitle: "", videoURL: "" }] };
        }
        return lesson;
      });
      return updatedLessons;
    });
  };

  const addNewLesson = () => {
    setLessons((prevLessons) => {
      const newLesson = { id: prevLessons.length + 1, contents: [{ videoTitle: "", videoURL: "" }] };
      return [...prevLessons, newLesson];
    });
  };

  const handleGlobalSubmit = () =>{
    console.log(lessons,"----------")
  }

  return (
    <div className="flex justify-center items-center min-full">
      <div className="flex-row w-3/4 ">
        {lessons.map((lesson) => (
          <div key={lesson.id} className="bg-white rounded-lg shadow-lg p-8 m-3">
            <h2 className="text-2xl font-bold mb-4">Lesson {lesson.id}</h2>
            {lesson.contents.map((content, index) => (
              <AddContent
                key={index}
                formData={content}
                setFormData={(updatedContent) => handleContentChange(lesson.id, index, updatedContent)}
                handleSubmit={() => handleContentSubmit(lesson.id)}
              />
            ))}
            <button
              type="button"
              className="bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"
              onClick={() => addNewContent(lesson.id)}
            >
              Add new content
            </button>
          </div>
        ))}
        <button
          type="submit"
          className="bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"
          onClick={addNewLesson}
        >
          Add new lesson
        </button>
        <button
          type="submit"
          className="bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"
          onClick={handleGlobalSubmit}
        >
          Submit the Form
        </button>
      </div>
    </div>
  );
};

export default AddLessons;
